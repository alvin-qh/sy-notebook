				{
					"Type": "NodeText",
					"Data": "1.1. PDCA 循环的概念"
				}
			]
		},
		{
			"ID": "20220818144819-6nklh0y",
			"Type": "NodeParagraph",
			"Properties": {
				"id": "20220818144819-6nklh0y",
